<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_show_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示普通notification"/>

    <Button
        android:id="@+id/btn_show_dynamic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示动态持久notification"/>

    <Button
        android:id="@+id/btn_dismiss_dynamic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="隐藏动态notification"/>

    <Button
        android:id="@+id/btn_big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示Big View notification"/>

    <Button
        android:id="@+id/btn_Heads_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示heads up notification"/>

    <Button
        android:id="@+id/btn_start_activity_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示打开整个activity栈 notification"/>

    <Button
        android:id="@+id/btn_start_single_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示打开单独activity notification"/>

</LinearLayout>